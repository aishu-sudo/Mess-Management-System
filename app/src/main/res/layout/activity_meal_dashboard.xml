<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/beige">

    <!-- Date Picker Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/calender" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:focusable="false"
            android:clickable="true"
            android:hint="Select Date"
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:layout_marginEnd="180dp" />

        <!-- Add Meal button -->
        <Button
            android:id="@+id/btnAddMeal"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="+ Add Meal"
            android:backgroundTint="@color/soft_brown"
            android:textColor="@color/dark_green"
            android:paddingHorizontal="0dp"
            android:textAllCaps="false"
            android:textSize="10sp" />

    </LinearLayout>

    <!-- Summary Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingTop="8dp">

        <!-- Breakfast card -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#FEF7E0"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textSize="14sp"
                android:textColor="@color/dark_green" />

            <TextView
                android:id="@+id/tvBreakfastCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 meals"
                android:textSize="12sp"
                android:textColor="@color/dark_green" />
        </LinearLayout>

        <!-- Lunch card -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#E7F8EE"
            android:padding="12dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:textSize="14sp"
                android:textColor="@color/dark_green" />

            <TextView
                android:id="@+id/tvLunchCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 meals"
                android:textSize="12sp"
                android:textColor="@color/dark_green" />
        </LinearLayout>

        <!-- Dinner card -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#E8F0FF"
            android:padding="12dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textSize="14sp"
                android:textColor="@color/dark_green" />

            <TextView
                android:id="@+id/tvDinnerCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 meals"
                android:textSize="12sp"
                android:textColor="@color/dark_green" />
        </LinearLayout>

        <!-- Total card -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#F8E7FF"
            android:padding="12dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Meals"
                android:textSize="12sp"
                android:textColor="@color/dark_green" />

            <TextView
                android:id="@+id/tvTotalCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 meals"
                android:textSize="12sp"
                android:textColor="@color/dark_green" />
        </LinearLayout>

    </LinearLayout>

    <!-- Today's Meal Entries Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Meal Entries"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/primary_green" />

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/soft_brown"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MEMBER NAME"
            android:textStyle="bold"
            android:textSize="10sp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/dark_green" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BREAKFAST"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/dark_green" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LUNCH"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/dark_green" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DINNER"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/dark_green" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/dark_green" />
    </LinearLayout>

    <!-- ListView for entries -->
    <ListView
        android:id="@+id/listMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:background="@color/light_cream" />

</LinearLayout>
