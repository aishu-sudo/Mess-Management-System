<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expense_List"
    android:orientation="vertical"
    android:background="@color/beige">

    <!-- Light cream box containing title + add button (wrap_content so it doesn't expand) -->
    <LinearLayout
        android:id="@+id/headerBoxs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_cream"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Row: Expense List label + Add button aligned right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expense List"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green" />

            <Button
                android:id="@+id/btnAddExpenses"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+ Add Expense"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:backgroundTint="@color/orange_700"
                android:textColor="@color/dark_green"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Total expenses band -->
    <LinearLayout
        android:id="@+id/totalBands"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/orange_700"
        android:gravity="center_vertical">

        <!-- Left texts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|start">

            <TextView
                android:id="@+id/tvTotalExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expenses"
                android:textSize="14sp"
                android:textColor="@color/dark_green" />

            <TextView
                android:id="@+id/tvTotalAmounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textColor="@color/dark_green"/>
        </LinearLayout>

        <!-- Right icon box -->
        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/orange_700"
            android:layout_marginStart="12dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvMoneyIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="20sp"
                android:textColor="@color/dark_green"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Filter / Category selector row -->
    <LinearLayout
        android:id="@+id/filterRows"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <Spinner
            android:id="@+id/categoriesSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <!-- Header row for list columns -->
    <LinearLayout
        android:id="@+id/headerRows"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/soft_brown"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Date"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:textColor="@color/dark_green"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Category"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/dark_green"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Description"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/dark_green"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:textColor="@color/dark_green"/>
    </LinearLayout>

    <!-- Expense list fills remaining space -->
    <ListView
        android:id="@+id/lvExpense"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_cream"
        android:dividerHeight="1dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</LinearLayout>
