<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Log In"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:textSize="28sp"
                android:gravity="center"
                android:background="@color/beige"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/light_cream"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logo"
                    android:contentDescription="App Logo" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Email"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/dark_green"/>

                <EditText
                    android:id="@+id/etlogId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:minHeight="48dp"
                    android:hint="Enter User Email"/>

                <!-- Password -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/dark_green"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etLogpassword"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="Enter password"/>

                    <ImageView
                        android:id="@+id/ivPassLogin"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_visiblility_off"/>
                </LinearLayout>


                <!-- Remember options as before -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <CheckBox
                        android:id="@+id/checkboxlogremuser"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:buttonTint="@color/primary_green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remember User"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="1dp"
                        android:textColor="@color/dark_green"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkboxlogrempass"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:buttonTint="@color/primary_green"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remember Password"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="1dp"
                        android:textColor="@color/dark_green"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnsignexit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Exit"
                    android:textColor="@color/dark_green"
                    android:backgroundTint="@color/soft_brown"/>

                <Button
                    android:id="@+id/btnsigngo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Login"
                    android:textColor="@color/dark_green"
                    android:backgroundTint="@color/soft_brown"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
